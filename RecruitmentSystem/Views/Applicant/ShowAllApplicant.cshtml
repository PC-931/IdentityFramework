@model IEnumerable<RecruitmentSystem.Models.Applicant>

@{
    ViewBag.Title = "ShowAllApplicant";
}

<h2>ShowAllApplicant</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CandidateId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VacancyId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CandidateId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VacancyId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Accepted", "Accepted", new { id=item.Id }) |
            @Html.ActionLink("On Hold", "OnHold", new { id=item.Id }) |
            @Html.ActionLink("Rejected", "Rejected", new { id=item.Id })
        </td>
    </tr>
}

</table>
